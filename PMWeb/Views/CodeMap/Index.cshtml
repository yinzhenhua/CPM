@using Microsoft.AspNetCore.Internal
@model PMService.ViewModels.CodeMap.CodeMapViewModel4Add
@{
    ViewData["Title"] = "新建系统字典项";
}
<h2>新增系统字典</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodeName" class="control-label"></label>
                <input type="text" asp-for="CodeName" class="form-control"/>
                <span asp-validation-for="CodeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    @{
                        var categories = ViewData["categories"] as IEnumerable<string>;
                        if (categories.Any())
                        {
                            foreach (var item in categories)
                            {
                                <option value="@item">@item</option>
                            }
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="Category"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChineseName" class="control-label"></label>
                <input type="text" asp-for="ChineseName" class="form-control"/>
                <span asp-validation-for="ChineseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input type="radio" asp-for="Status" value="0" id="radio_inactive" class="radio-inline" checked="checked"/>
                <label for="radio_inactive">锁定</label>
                <input type="radio" asp-for="Status" value="1" id="radio_active" class="radio-inline"/>
                <label for="radio-active">正常</label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="保存"/>&nbsp;
                <input type="reset" class="btn btn-danger" value="取消"/>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}