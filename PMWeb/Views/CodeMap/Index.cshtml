@model PMService.ViewModels.CodeMap.CodeMapViewModel4Add
<div class="container-fluid">
    <div class="row">
        <h2>新增系统字典</h2>
        @using (Html.BeginForm("SaveCode", "CodeMap",null, FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(x=>x.CodeName)
                @Html.TextBoxFor(x=>x.CodeName, new{@class="form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.Category)
                @Html.DropDownListFor(x=>x.Category, (SelectList)ViewData["categories"])
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.ChineseName)
                @Html.TextBoxFor(x=>x.ChineseName, new{@class="form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.Description)
                @Html.TextAreaFor(x=>x.Description, new{@class="form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(x=>x.Status)
                @Html.RadioButtonFor(x=>x.Status, 0, new{id="radio_inactive"})&nbsp;<label>冻结</label>
                @Html.RadioButtonFor(x=>x.Status, 1, new{id="radio_active"})&nbsp;<label>激活</label>
            </div>
            <div class="btn-group">
                <input type="submit" class="btn btn-primary" value="保存" />&nbsp;
                <input type="reset" class="btn btn-danger" value="取消"/>
            </div>
        }
    </div>
</div>

